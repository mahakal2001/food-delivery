{{# each products }}
    <div class="row">
        {{# each this }}
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="{{ this.imagePath }}" alt="..." class="img-responsive">
                    <div class="caption">
                        <h3>{{ this.title }}</h3>
                        <p class="description">{{ description }}</p>
                        <p class="extraDescription">{{ this.extraDescription }}</p>
                        <div class="clearfix">
                            <div class="price pull-left">&#8377;{{ this.price }}</div>
                            <a href="/add-to-cart/{{this._id}}" class="btn btn-success pull-right" role="button">Add to Cart</a>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
{{/each}}

<div id="myNav" class="overlay">

    <!-- Overlay content -->
    <div class="overlay-content">
        <div class="overlay-cart-content">
                <div class="header">
                    <h4>Your Cart</h4>
                    <a id="closeCart" href="/">&times;</a>
                    <hr>
                </div>
                {{# if this.cartItems }}
                    <div class="body">
                        <ul class="list-group">
                            {{#each cartItems}}
                                <li class="list-group-item">
                                    <div class="row">
                                        <div class="col-md-3 cartItemCol"> <img src="{{ this.item.imagePath }}" alt="..." class="img-responsive"></div>
                                        <div class="col-md-9 cartItemCol">
                                            <div class="row ">
                                                <div class="col-md-10" style="padding-left: 6px">
                                                    <span style="font-weight: bold;" >{{this.item.title}} </span>
                                                </div>
                                                <div class="col-md-2" style="padding-left: 0px">
                                                    <a href="/removeAll/{{this.item._id}}" class="cartItemClose">&times;</a>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-2" style="padding-left: 0px" >
                                                </div>
                                                <div class="col-md-6 cartItemQty" style="padding-left: 0px" >
                                                    <a href="/reduce/{{this.item._id}}"><i class="fa fa-minus-circle" aria-hidden="true"></i></a>
                                                    <span>{{this.qty}}</span>
                                                    <a href="/add-to-cart/{{this.item._id}}/true"><i class="fa fa-plus-circle" aria-hidden="true"></i></a>
                                                </div>
                                                <div class="col-md-1" style="padding-left: 0px" >
                                                </div>
                                                <div class="col-md-3" style="padding-left: 0px" >
                                                    <span class="label label-success">&#8377;{{this.price}}</span>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </li>
                            {{/each}}
                        </ul>

                        <div class="row">
                            <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
                                <strong style="color: #337ab7;">Total: &#8377; {{ totalPrice }}</strong>
                            </div>
                        </div>
                    </div>


                    <div class="footer">
                        <a href="/checkout" type="button" class="btn btn-success">Proceed to Checkout</a>
                    </div>
                {{ else }}
                    <div class="cartEmptyBody">
                        <div id="cutleryIcon"><i class="fa fa-cutlery" aria-hidden="true"></i></div>
                        <div style="margin-bottom: 10px">Your cart is empty.</div>
                        <a href="/" type="button" class="btn btn-danger">Browse Food</a>

                    </div>


                {{/if}}
        </div>

    </div>

</div>


