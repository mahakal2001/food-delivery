<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success" {{#if noMsg}}hidden{{/if}}>
            {{successMsg}}
        </div>
    </div>
</div>
{{# each products }}
    <div class="row">
        {{# each this }}
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="{{ this._doc.imagePath }}" alt="..." class="img-responsive">
                    <div class="caption">
                        <h3>{{ this._doc.title }}</h3>
                        <p class="description">{{ this._doc.description }}</p>
                        <p class="extraDescription">{{ this._doc.extraDescription }}</p>
                        <div class="clearfix">
                            <div class="price pull-left">&#8377;{{ this._doc.price }}</div>
                            <a href="/add-to-cart/{{this._doc._id}}/false" class="btn btn-success pull-right" role="button">Add to Cart</a>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
{{/each}}