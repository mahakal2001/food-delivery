    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title">
                <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapsePayment">
                    Payment Information
                </a>
            </h4>
        </div>
        <div id="collapsePayment" class="panel-collapse collapse in">
            <div class="panel-body">
                <form action="/checkout" method="post" id="checkout-form" novalidate>
                    <div id="charge-error" class="alert alert-danger {{#if noError}} hidden {{/if}}">
                        {{errorMsg}}
                    </div>
                    <div class="radio">
                        <label>
                            <input type="radio" name="paymentMode" id="cod" value="cod" checked>
                            Cash On Delivery
                        </label>
                    </div>
                    <div class="radio">
                        <label>
                            <input type="radio" name="paymentMode" id="cc" value="cc">
                            Credit Card
                        </label>
                        <div id="creditCardContainer" style="display: none">
                            <div class="row">
                                <div class="col-md-6">
                                    <input type="text" id="card-number" class="form-control" required placeholder="Card Number">
                                </div>
                                <div class="col-md-2">
                                    <input type="text" id="card-expiry-month" class="form-control" required placeholder="MM">
                                </div>
                                <div class="col-md-2">
                                    <input type="text" id="card-expiry-year" class="form-control" required placeholder="YYYY">
                                </div>
                                <div class="col-md-2">
                                    <input type="text" id="card-cvc" class="form-control" required placeholder="CVV">
                                </div>
                            </div>
                            <div class="row" style="margin-top: 10px">
                                <div class="col-md-12">
                                    <input type="text" id="card-name" class="form-control" required placeholder="Full Name(as mention on Card)">
                                </div>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success pull-right" style="margin: 10px">Buy now</button>
                </form>

            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="https://js.stripe.com/v2/"></script>
